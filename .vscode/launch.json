// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/client/out/**/*.js"
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "compile"
            },
            "env": {
                "VSCODE_DEBUG_MODE": "true"
            }
        },
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "args": [
                "--tcp"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "type": "node",
            "name": "Launch Server [WebSockets]",
            "request": "launch",
            "args": [
                "--ws"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": [
                "Launch Server",
                "Launch Client"
            ]
        }
    ]
}