{
    "name": "trlc-vscode-extension",
    "version": "3.0.0",
    "publisher": "bmw-group",
    "author": {
        "name": "BMW Group"
    },
    "engines": {
        "vscode": "^1.62.0"
    },
    "icon": "assets/BMW_White-Colour_RGB.png",
    "license": "GPL-3.0-or-later",
    "displayName": "TRLC VSCode Extension",
    "description": "VSCode integration for the Python TRLC reference implementation",
    "homepage": "https://github.com/bmw-software-engineering/trlc-vscode-extension",
    "bugs": {
        "url": "https://github.com/bmw-software-engineering/trlc-vscode-extension/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bmw-software-engineering/trlc-vscode-extension.git"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "trlc",
        "requirements",
        "plain text",
        "bmw"
    ],
    "devDependencies": {
        "@types/node": "^16.11.6",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "esbuild": "^0.19.4",
        "eslint": "^8.2.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@vscode/vsce": "^2.21.1",
        "vscode-languageclient": "^7.0.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "main": "client/out/main.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "languages": [
            {
                "id": "TRLC",
                "extensions": [
                    ".rsl",
                    ".check",
                    ".trlc"
                ],
                "configuration": "./trlc-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "TRLC",
                "scopeName": "source.trlc",
                "path": "./trlc-grammar.json"
            }
        ],
        "commands": [],
        "configuration": {
            "type": "object",
            "title": "ttrlc-vscode-extension server configuration",
            "properties": {
                "jsonServer.exampleConfiguration": {
                    "scope": "resource",
                    "type": "string",
                    "default": "You can override this message."
                }
            }
        }
    }
}